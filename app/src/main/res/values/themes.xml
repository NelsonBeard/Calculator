<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/calc_light_theme</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="ButtonOperationStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:backgroundTint">#CD1D1D</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="rippleColor">#3F51B5</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonNumberStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:backgroundTint">#2196F3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="rippleColor">#60822F91</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>